{
  "name": "nodets",
  "version": "1.0.0",
  "description": "Enterprise-grade Node.js TypeScript Architecture",
  "keywords": [
    "node",
    "typescript",
    "clean-architecture",
    "ddd",
    "solid"
  ],
  "homepage": "https://github.com/otabekoff/nodets#readme",
  "bugs": {
    "url": "https://github.com/otabekoff/nodets/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/otabekoff/nodets.git"
  },
  "license": "MIT",
  "author": {
    "name": "Otabek Sadiridinov",
    "email": "sadiridinovotabek@gmail.com",
    "url": "https://otabekoff.uz"
  },
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon --watch src --exec ts-node src/index.ts",
    "dev:tsx": "tsx watch src/index.ts",
    "dev:debug": "node --inspect -r tsx/cjs src/index.ts",
    "build": "tsc",
    "build:alias": "tsc && tsc-alias",
    "build:clean": "rm -rf dist && npm run build",
    "start": "node dist/index.js",
    "start:dist": "node dist/index.js",
    "start:prod": "NODE_ENV=production node dist/index.js",
    "start:tsnode": "npx ts-node src/index.ts",
    "db:migrate": "prisma migrate dev",
    "db:migrate:prod": "prisma migrate deploy",
    "db:generate": "prisma generate",
    "db:seed": "tsx prisma/seed.ts",
    "db:studio": "prisma studio",
    "db:reset": "prisma migrate reset",
    "test": "vitest",
    "test:echo": "echo \"Salom, dunyo!\"",
    "test:unit": "vitest run --dir src --coverage",
    "test:integration": "vitest run --dir tests/integration",
    "test:e2e": "vitest run --dir tests/e2e",
    "test:e2e:config": "vitest run --config vitest.e2e.config.ts",
    "test:watch": "vitest watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:jest": "jest",
    "lint": "eslint . --ext .ts",
    "lint:src": "eslint src --ext .ts --fix",
    "lint:fix": "eslint src --ext .ts --fix",
    "lint:check": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "type-check": "tsc --noEmit",
    "validate": "npm run type-check && npm run lint:check && npm run test:unit",
    "prepare": "husky install",
    "docker:build": "docker build -t nodets .",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:restart": "npm run docker:down && npm run docker:up",
    "docs:generate": "typedoc --out docs src",
    "release": "standard-version"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^25.0.3",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@typescript-eslint/eslint-plugin": "^8.51.0",
    "@typescript-eslint/parser": "^8.51.0",
    "@vitest/coverage-v8": "^4.0.16",
    "@vitest/ui": "^4.0.16",
    "concurrently": "^9.2.1",
    "dotenv": "^17.2.3",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^8.0.3",
    "lint-staged": "^16.2.7",
    "nodemon": "^3.1.11",
    "prettier": "^3.7.4",
    "prisma": "^7.2.0",
    "standard-version": "^9.5.0",
    "supertest": "^7.1.4",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.21.0",
    "typedoc": "^0.28.15",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  },
  "dependencies": {
    "@bull-board/express": "^6.16.2",
    "@prisma/client": "^7.2.0",
    "@sinclair/typebox": "^0.34.46",
    "bcrypt": "^6.0.0",
    "bull": "^4.16.5",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "express-session": "^1.18.2",
    "helmet": "^8.1.0",
    "inversify": "^7.10.8",
    "ioredis": "^5.8.2",
    "joi": "^18.0.2",
    "jsonwebtoken": "^9.0.3",
    "nanoid": "^5.1.6",
    "pg": "^8.16.3",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.3",
    "redoc-express": "^2.1.3",
    "reflect-metadata": "^0.2.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^13.0.0",
    "zod": "^4.3.5"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
